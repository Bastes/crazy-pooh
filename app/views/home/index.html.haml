- specific_includes do
  = stylesheet_link_tag 'home'
%div#right-column
  %div#welcome_title
    %span= t('.welcome')
  %div#welcome
    %span.left_bracket
    %span.right_bracket
    = static_content_tag("home:welcome", :div)
  = static_content_tag("home:intellectual_property", :div,
                       :id => 'intellectual_property')
  %div#links
    - [ 'couleur_bd',
        'illustration',
        'graphisme',
        'chiyogami',
        'croquis' ].each do |section|
      = link_to(portfolio_path(section), :id => "to_#{section}") do
        %span= t(".links.#{section}")
    = link_to('https://plus.google.com/u/0/photos/109435610364015484658/albums', :id => 'to_inspirations') do
      %span= t('.links.inspirations')
    = link_to(bio_path, :id => "to_bio_et_cv") do
      %span= t(".links.bio_et_cv")
    = link_to(external_links_path, :id => "to_liens") do
      %span= t(".links.liens")
